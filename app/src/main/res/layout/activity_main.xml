<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.administrator.yibit.widget.NoScrollViewpager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.example.administrator.yibit.widget.NoScrollViewpager>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A5A5A5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/assets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assets_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/assets_green" />

            <TextView
                android:id="@+id/assets_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="资产"
                android:textColor="#73B3B5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/market_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/market_gray" />

            <TextView
                android:id="@+id/market_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="行情"
                android:textColor="#A5A5A5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/transaction_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/transaction_gray" />

            <TextView
                android:id="@+id/transaction_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="交易"
                android:textColor="#A5A5A5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myself"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/myself_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/myself_gray" />

            <TextView
                android:id="@+id/myself_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的"
                android:textColor="#A5A5A5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>